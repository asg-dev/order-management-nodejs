<div class="form-wrapper">
  <div class="logo" style="display: inline; width:100%">
    <img src="/images/restaurant.png" alt="Home" style="width: 50px; height:50px; display:inline">
    <p><i>Restaurant</i></p>
  </div>
  
<div class="login-form-container">
  <div class="login-title">
    <h3>Login</h3>
  </div>
<form class="login-form" action="/users/login" method="POST" autocomplete="off">
  {{> messages }}
  <div class="form-input">
    <input type="email" name="email" autocomplete="off" placeholder="Email address">
  </div>
  <div class="form-input">
    <input type="password" name="password" placeholder="Password">
  </div>
<button type="submit" class="form-action login">Login</button>
<hr class="login-separator">
<h4>Not a registered user? Sign up <a href="/users/register">here</a></h4>
</form>
</div>
</div>