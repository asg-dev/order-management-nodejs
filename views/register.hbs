<div class="register-form-wrapper">
  <div class="logo" style="display: inline; width:100%">
    <img src="/images/restaurant.png" alt="Home" style="width: 50px; height:50px; display:inline">
    <p><i>Restaurant</i></p>
  </div>
<div class="register-form-container">
<div class="register-title"><h3>Register</h3></div>
<form class="register-form" action="/users/register" method="POST" autocomplete="off"> 
    {{> messages }}
   <div class="form-input">
    <input type="text" name="name" placeholder="Your Name">
  </div>
  <div class="form-input">
    <input type="email" name="email" placeholder="Email Address">
  </div>
  <div class="form-input">
    <input type="password" name="password" placeholder="Password">
  </div>
 <button type="submit" class="form-action register">Register</button>
 <a class="form-action cancel" href="/users/login">Cancel</a>
 <hr class="login-separator">
 <h4>Registered User? Login <a href="/users/login">here</a></h4>
</form>
</div>
</div>